            <input type="radio" name="payment_method" value="{{ payment_method.code }}" />
            {% endif %}
          </div>
          <div class="bx-soa-pp-company-image">
            <img src="{{ payment_method.image }}" alt="{{ payment_method.title }}">
          </div>
          <div class="bx-soa-pp-company-descr">
            <label><i class="fa fa-info"></i></label>
              <div class="pop-up pp-descr">{{ payment_method.comment }}</div>
          </div>
      </div>
  </div>
  <div class="bx-soa-pp-company-smalltitle">{{ payment_method.title }}</div><label class="icon"><i class="fa fa-check"></i></label>
