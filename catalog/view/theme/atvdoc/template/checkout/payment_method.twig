<script>
  $('.bx-soa-pp-company-p').click(function(){
      var $this = $(this);
      $this.find('input[name="payment_method"]').prop('checked', 'checked');
      $this.find('input[name="payment_method"]').change();

      $('.bx-soa-pp-company-p').removeClass('bx-selected');
      $this.addClass('bx-selected');
  })
</script>